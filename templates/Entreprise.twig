<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entreprises</title>
    <link rel="stylesheet" href="{{ routes.bootstrap }}">
    <link rel="stylesheet" href="{{ routes.css }}/styles.scss">
</head>
<body>
<div class="navbar navbar-dark bg-dark box-shadow">
    <div class="container d-flex justify-content-between">
        <!-- Logo ou Titre de la page -->
        <a href="index.php?page=home" class="navbar-brand d-flex align-items-center">
            <img src="{{ routes.images }}/home.png" width="25" height="25">
            <strong>Accueil</strong>
        </a>

        <a href="index.php?page=entreprise" class="navbar-brand d-flex align-items-center">
            <img src="{{ routes.images }}/entreprise.png" width="25" height="25" class="me-2">
            <p class="mb-0">Entreprise</p>
        </a>

        <a href="index.php?page=stagiaire" class="navbar-brand d-flex align-items-center">
            <img src="{{ routes.images }}/stage.png" width="25" height="25" class="me-2">
            <p class="mb-0">Stagiaire</p>
        </a>

        <a href="index.php?page=inscription" class="navbar-brand d-flex align-items-center">
            <img src="{{ routes.images }}/inscrire.png" width="25" height="25" class="me-2">
            <p class="mb-0">Inscription</p>
        </a>

        <a href="index.php?page=aide" class="navbar-brand d-flex align-items-center">
            <img src="{{ routes.images }}/aide.png" width="25" height="25" class="me-2">
            <p class="mb-0">Aide</p>
        </a>

        <a href="index.php?page=deconnexion" class="navbar-brand d-flex align-items-center">
            <img src="{{ routes.images }}/deconnexion.png" width="25" height="25" class="me-2">
            <p class="mb-0">Déconnexion</p>
        </a>
    </div>
</div>

<main class="container">
    <h2>Liste des entreprises</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Options</th>
                <th>Entreprise</th>
                <th>Responsable</th>
                <th>Adresse</th>
                <th>Site</th>
                <th>Specialités</th>
            </tr>
        </thead>
        <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td></td>
                    <td>{{ entreprise.raison_sociale }}</td>
                    <td>{{ entreprise.nom_resp }}</td>
                    <td>{{ entreprise.rue_entreprise }}<br>
                    {{ entreprise.cp_entreprise }} {{ entreprise.ville_entreprise }}</td>
                    <td>{{ entreprise.site_entreprise }}</td>
                    <td>
                        {% for specialite in entreprise.specialites %}
                            {{ specialite }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</main>

<script src="{{ routes.bootstrap | replace({'.css': '.bundle.min.js'}) }}"></script>
</body>
</html>