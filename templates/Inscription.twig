        </a>
    </div>
</div>


	
<body>
    
<main class="container">
    <form action="inscription.php" method="POST">
        <h2>Contacts</h2>
        <div class="form-group">
            <label for="entreprise">Entreprise</label>
            <select id="entreprise" name="entreprise" class="form-control">
                {% for entreprise in entreprises %}
                    <option value="{{ entreprise.num_entreprise }}">{{ entreprise.raison_sociale }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="etudiant">Étudiant</label>
            <select id="etudiant" name="etudiant" class="form-control">
                {% for etudiant in etudiants %}
                    <option value="{{ etudiant.num_etudiant }}">{{ etudiant.nom_etudiant }} {{ etudiant.prenom_etudiant }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="professeur">Professeur</label>
            <select id="professeur" name="professeur" class="form-control">
                {% for professeur in professeurs %}
                    <option value="{{ professeur.num_prof }}">{{ professeur.nom_prof }}</option>
                {% endfor %}
            </select>
        </div>

        <h2>Description du stage</h2>
        <div class="form-group">
            <label for="date_debut">Date de début</label>
            <input type="date" id="date_debut" name="date_debut" class="form-control">
        </div>
        <div class="form-group">
            <label for="date_fin">Date de fin</label>
            <input type="date" id="date_fin" name="date_fin" class="form-control">
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <select id="type" name="type" class="form-control">
                <option value="stage">Stage</option>
                <option value="alternance">Alternance</option>
            </select>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="observations">Observations</label>
            <textarea id="observations" name="observations" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Soumettre</button>
    </form>
</main>

<script src="{{ routes.bootstrap | replace({'.css': '.bundle.min.js'}) }}"></script>

    
</body>
</html>